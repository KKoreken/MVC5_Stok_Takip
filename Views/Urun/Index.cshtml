@using Stok_Uygulama.Models.Entity
@model List<TBLUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using (Html.BeginForm("Index", "Urun", FormMethod.Get)) {
<p>
    Ürün: @Html.TextBox("item")
    <input type="submit" value="ara" />
</p>
}
<h2 style="text-align:center">Ürünler</h2>
<a style="margin-bottom:10px;" href="/Urun/YeniUrun" class=" btn btn-primary"><i class="fas fa-plus"></i> Ürün ekle</a>

<div style="width:100%;
display:flex;
margin:auto;
flex-direction:row;
flex-wrap:wrap;
align-items:center;
" >
        @foreach (var i in Model)
        {
            <div class="card" style="width: 18rem; margin: 20px; -webkit-box-shadow: 0px 0px 19px -2px rgba(0,0,0,0.91); box-shadow: 0px 0px 19px -2px rgba(0,0,0,0.91); ">
                <div class="card-body">
                    <h5 class="card-title">@i.ad</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@i.marka</h6>
                    <ul>
                        <li>Alış: @i.alisFiyati ₺</li>
                        <li>Alış: @i.satifFiyati ₺</li>
                        <li>marka: @i.marka </li>
                        <li>Stok: <span class="badge rounded-pill bg-dark">@i.stok</span></li>


                    </ul>
                    <a href="/Urun/UrunGetir/@i.id" class="card-link">
                        Düzenle
                    </a><a href="/Urun/UrunSil/@i.id" class="card-link">
    Sil
</a>
                    <a href="#" class="card-link">@i.TBLKategori.ad</a>
                </div>
            </div>


        }
</div>


<script>
    function myFunction() {
        alert("Başarıyla silindi!");
    }
</script>

